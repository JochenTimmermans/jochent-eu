{{ include('_header.twig') }}

<h1>Login User Form</h1>

{% if warning is defined %}

<div class="alert alert-danger"> {{ warning }} </div>

{% endif %}

<form class="form-horizontal" action="{{ www }}user/login" method="POST">
  <div class="form-group">
      <label class="control-label col-sm-2" for="email">Email:</label>
      <div class="col-sm-10">
          <input type="email" class="form-control" id="email" name="luf_email" placeholder="Enter email">
      </div>
  </div>
  <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">
          <input type="password" class="form-control" id="pwd" name="luf_password" placeholder="Enter password">
      </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <input type="hidden" name="loginuserform" value="go" />
          <button type="submit" class="btn btn-default">Submit</button>
      </div>
  </div>
</form>

{{ include('_footer.twig') }}